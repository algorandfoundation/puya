#pragma version 10

test_cases.inner_transactions.c2c.Greeter.approval_program:
    txn ApplicationID
    bnz main_entrypoint@2
    callsub __init__

main_entrypoint@2:
    txn NumAppArgs
    bz main_bare_routing@8
    method "bootstrap()uint64"
    method "log_greetings(string)void"
    txna ApplicationArgs 0
    match main_bootstrap_route@4 main_log_greetings_route@5
    err // reject transaction

main_bootstrap_route@4:
    txn OnCompletion
    !
    assert // OnCompletion is NoOp
    txn ApplicationID
    assert // is not creating
    callsub bootstrap
    itob
    byte 0x151f7c75
    swap
    concat
    log
    int 1
    return

main_log_greetings_route@5:
    txn OnCompletion
    !
    assert // OnCompletion is NoOp
    txn ApplicationID
    assert // is not creating
    txna ApplicationArgs 1
    callsub log_greetings
    int 1
    return

main_bare_routing@8:
    txn OnCompletion
    !
    assert // reject transaction
    txn ApplicationID
    !
    assert // is creating
    int 1
    return


// test_cases.inner_transactions.c2c.Greeter.bootstrap() -> uint64:
bootstrap:
    proto 0 1
    int 0
    byte "hello_app"
    app_global_get_ex
    assert // check hello_app exists
    !
    assert // already bootstrapped
    itxn_begin
    int 0
    itxn_field Fee
    byte 0x0a8101
    itxn_field ClearStateProgramPages
    byte 0x0a200101311b410026800402bece11361a008e0100010031191444311844361a018800158004151f7c754c50b02243311914443118144422438a01018bff570200800748656c6c6f2c204c504915165706004c5089
    itxn_field ApprovalProgramPages
    int appl
    itxn_field TypeEnum
    itxn_submit
    byte "hello_app"
    itxn CreatedApplicationID
    app_global_put
    int 0
    byte "hello_app"
    app_global_get_ex
    assert // check hello_app exists
    retsub


// test_cases.inner_transactions.c2c.Greeter.log_greetings(name: bytes) -> void:
log_greetings:
    proto 1 0
    itxn_begin
    int 0
    byte "hello_app"
    app_global_get_ex
    assert // check hello_app exists
    method "hello(string)string"
    itxn_field ApplicationArgs
    frame_dig -1
    itxn_field ApplicationArgs
    itxn_field ApplicationID
    int appl
    itxn_field TypeEnum
    itxn_submit
    itxn LastLog
    dup
    extract 4 0
    swap
    extract 0 4
    byte 0x151f7c75
    ==
    assert // ARC4 prefix is valid
    extract 2 0
    byte "HelloWorld returned: "
    swap
    concat
    log
    retsub


// test_cases.inner_transactions.c2c.Greeter.__init__() -> void:
__init__:
    proto 0 0
    byte "hello_app"
    int 0
    app_global_put
    retsub
