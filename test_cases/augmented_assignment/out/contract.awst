contract Augmented
{
  globals {
    ['global_uint']: uint64
    ['global_bytes']: bytes
  }
  locals {
    ['my_uint']: uint64
    ['my_bytes']: bytes
  }
  
  constructor()
  {
    this.global_uint: uint64 = 0u
    this.global_bytes: bytes = hex<"">
  }
  
  approval_program(): bool
  {
    me: account = txn<Sender>()
    if (txn<OnCompletion>() == OptIn) {
      this.my_uint[me]: uint64 = 0u
      this.my_bytes[me]: bytes = hex<"">
    }
    if (reinterpret_cast<bool>(txn<ApplicationID>())) {
      n: uint64 = txn<NumAppArgs>()
      bytes_to_add: bytes = reinterpret_cast<bytes>(itob(n))
      this.my_uint[me] += n
      this.my_bytes[me] += bytes_to_add
      this.global_uint += n
      this.global_bytes += bytes_to_add
    }
    return true
  }
  
  clear_state_program(): bool
  {
    return true
  }
}