contract Augmented
{
  globals {
    ['global_uint']: puyapy.UInt64
    ['global_bytes']: puyapy.Bytes
  }
  locals {
    ['my_uint']: puyapy.UInt64
    ['my_bytes']: puyapy.Bytes
  }
  
  constructor()
  {
    this.global_uint: puyapy.UInt64 = 0u
    this.global_bytes: puyapy.Bytes = ''
  }
  
  approval_program(): bool
  {
    me: puyapy.Account = txn<Sender>()
    if (txn<OnCompletion>() == OptIn) {
      this.my_uint[me]: puyapy.UInt64 = 0u
      this.my_bytes[me]: puyapy.Bytes = ''
    }
    if (reinterpret_cast<bool>(txn<ApplicationID>())) {
      n: puyapy.UInt64 = txn<NumAppArgs>()
      bytes_to_add: puyapy.Bytes = reinterpret_cast<puyapy.Bytes>(itob(n))
      this.my_uint[me] += n
      this.my_bytes[me] += bytes_to_add
      this.global_uint += n
      this.global_bytes += bytes_to_add
    }
    return true
  }
  
  clear_state_program(): bool
  {
    return true
  }
}